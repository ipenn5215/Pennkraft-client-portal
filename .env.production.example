# Production Environment Variables for Pennkraft Portal
# Copy this file to .env.production and fill in your actual values

# Database Configuration (PostgreSQL on InMotion Hosting)
DATABASE_URL="postgresql://inmoti87_pennkraft:your_db_password@localhost:5432/inmoti87_portal?schema=public"

# Next.js Configuration
NEXT_PUBLIC_APP_URL="https://inmotionestimating.com/portal"
NODE_ENV="production"

# NextAuth.js Configuration
NEXTAUTH_URL="https://inmotionestimating.com/portal"
NEXTAUTH_SECRET="generate-a-secure-random-string-here"
# Generate with: openssl rand -base64 32

# Email Configuration (Using InMotion email)
EMAIL_FROM="noreply@inmotionestimating.com"
EMAIL_SERVER_HOST="mail.inmotionestimating.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="noreply@inmotionestimating.com"
EMAIL_SERVER_PASSWORD="your-email-password"

# Contact Email
CONTACT_EMAIL="ipenn@pennkraft.com"

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# File Upload Configuration
UPLOAD_MAX_SIZE="10485760"  # 10MB in bytes
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,application/pdf"

# Security
RATE_LIMIT_PER_MINUTE="60"
SESSION_MAX_AGE="2592000"  # 30 days in seconds

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=""
NEXT_PUBLIC_GTM_ID=""

# Monitoring (Optional)
SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""

# Feature Flags
ENABLE_SIGNUP="false"
ENABLE_SOCIAL_AUTH="false"
MAINTENANCE_MODE="false"